<resources>

    <!-- Base application theme. -->
    <style name="KoLTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/kol_blue</item>
        <item name="colorPrimaryDark">@color/kol_theme_dark</item>
        <item name="colorAccent">@color/kol_theme_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="KoLTheme.ChillOut" parent="KoLTheme">
        <item name="colorPrimary">@color/chill_green</item>
        <item name="colorPrimaryDark">@color/chill_theme_dark</item>
        <item name="colorAccent">@color/chill_theme_accent</item>
    </style>

    <style name="KoLTheme.Fruit" parent="KoLTheme">
        <item name="colorPrimary">@color/fruit_blue</item>
        <item name="colorPrimaryDark">@color/fruit_theme_dark</item>
        <item name="colorAccent">@color/fruit_theme_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!--Login page should still look like kol and have an actionbar (maybe?)-->
    <style name="LoginKolTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/kol_blue</item>
        <item name="colorPrimaryDark">@color/kol_theme_dark</item>
        <item name="colorAccent">@color/kol_theme_accent</item>
    </style>

    <style name="KoLTheme.Toolbar" parent="KoLTheme">

        <!-- navigation icon color -->
        <item name="colorControlNormal">@android:color/white</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
