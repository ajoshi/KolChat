<?xml version="1.0" encoding="utf-8"?>
<!-- Shows info about 1 channel or user. Part of a list of channels -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/channel_list_padding"
    android:paddingBottom="@dimen/channel_list_padding">
    <ImageView
        android:id="@+id/pm_indicator"
        android:layout_marginTop="@dimen/channel_list_pm_indicator_top_margin"
        android:layout_width="@dimen/channel_list_pm_indicator_size"
        android:layout_height="@dimen/channel_list_pm_indicator_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:src="@drawable/person_black"
        android:contentDescription="@string/accessbility_pm_indicator"/>
    <TextView
        android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/channel_name_size"
        android:layout_toLeftOf="@id/last_message_time"
        android:layout_toStartOf="@id/last_message_time"
        android:paddingStart="@dimen/channel_list_padding"
        android:paddingLeft="@dimen/channel_list_padding"
    />
    <TextView
        android:id="@+id/last_message_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingEnd="@dimen/channel_list_padding"
        android:paddingRight="@dimen/channel_list_padding"
    />
</RelativeLayout>
